---
// Удаляем любые мета-теги редиректа, если они есть
interface Props {
	title: string;
	lang?: string;
}

const { title, lang = "en" } = Astro.props;
---

<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<!-- Убедитесь, что здесь нет мета-тегов для редиректа -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<slot name="head" />
	</head>
	<body>
		<slot />
	</body>
</html>